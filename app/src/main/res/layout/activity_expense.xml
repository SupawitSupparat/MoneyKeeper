<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/IncomeText"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="income" />

    <Button
        android:id="@+id/Foodbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IncomeText"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="47dp"
        android:text="Food" />

    <Button
        android:id="@+id/Transbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Foodbot"
        android:layout_alignBottom="@+id/Foodbot"
        android:layout_centerHorizontal="true"
        android:text="Transport" />

    <LinearLayout
        android:id="@+id/refillLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="add"
            android:text="Add" />
        <EditText
            android:id="@+id/AddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_above="@+id/Done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp">

        <EditText
            android:id="@+id/refillText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />
    </LinearLayout>

    <Button
        android:id="@+id/Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="65dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Done" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Done"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/Transbot"
        android:layout_toStartOf="@+id/Transbot"
        android:text="Back" />

    <Button
        android:id="@+id/Healthbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Foodbot"
        android:layout_alignBottom="@+id/Foodbot"
        android:layout_alignLeft="@+id/Done"
        android:layout_alignStart="@+id/Done"
        android:text="Health" />

    <Button
        android:id="@+id/Socialbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Foodbot"
        android:layout_alignRight="@+id/Foodbot"
        android:layout_below="@+id/Foodbot"
        android:layout_marginTop="35dp"
        android:text="Social" />

    <Button
        android:id="@+id/Education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Transbot"
        android:layout_alignStart="@+id/Transbot"
        android:layout_alignTop="@+id/Socialbot"
        android:text="Eduvation" />

    <Button
        android:id="@+id/otherbot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Healthbot"
        android:layout_alignRight="@+id/Healthbot"
        android:layout_alignTop="@+id/Education"
        android:text="Other" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/IncomeText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/IncomeText"
        android:layout_below="@+id/refillLayout"
        android:layout_marginTop="24dp"
        android:text="Description" />
</RelativeLayout>